[flake8]
select = ANN,B,B9,BLK,C,D,DAR,E,F,I,S,W
ignore = ANN101,ANN401,B905,E203,E501,W503
per-file-ignores =
    tests/*:S101
    __init__.py:F401
max-complexity = 10
max-line-length = 110
exclude =
    .git
    venv
    build
    __pycache__
    docs/source/conf.py
docstring-convention = google
strictness = short
